<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs') %>
    <title>Collection</title>
    <link rel="stylesheet" href="/public/css/bookshelf.css" />
    <script src="/public/scripts/bookshelf.js"></script>
</head>
<body>
    <!--------------------------------------------  Navbar here  --------------------------------->
    <%- include('partials/header-nav.ejs'); %>

    <div class="content">

        <div class="image-background">
            <div class="background-cover"></div>
            <img class="background-image-shelf" src="/public/images/shelf.jpg" />
        </div>
        
        <!--------------------- Header Container ------------------------------>
        <div class="header-contaier">
            <div class="title">Collection</div>
        </div>

        <!--------------------- Content Container ------------------------------>
        <div class="wrapper">
            <div class="content-container">
                <% for (const book of bookData) { %>
                    <div class="card" style="width: 18rem;">
                        <img src=<%= book.image %> class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title %></h5>
                            <p class="card-text"><%= book.description %></p>
                            <div class="product-button-row">
                                <a href="#" class="btn btn-primary">Details</a>
                                <button class="btn btn-primary edit-button" type="submit" onclick="window.location='/books/edit/<%= book.title %>'">Edit</button>
                                <button class="btn btn-danger delete-button" type="submit">Delete</button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>

            <div class="paging">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>


</body>
</html>